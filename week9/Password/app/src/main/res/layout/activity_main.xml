<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4e606e"
    tools:context="com.example.zhanglanxin.password.MainActivity">

    <EditText
        android:id="@+id/edit_text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:inputType="number"
        android:padding="4dp"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/button"
        android:layout_marginEnd="47dp" />

    <EditText
        android:id="@+id/edit_text_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:inputType="number"
        android:padding="4dp"
        android:textSize="24sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit_text_symbols"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="4dp"
        android:textSize="24sp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/edit_text_length"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="50sp"
        android:id="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" get password "
        android:onClick="generate"
        android:background="#b3b3b3"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="312dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/edit_text_symbols"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:text="length of the password  "
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="length of numbers  "
        android:textSize="30sp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/edit_text_length"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="length of symbols  "
        android:layout_marginTop="22dp"
        android:layout_below="@+id/edit_text_numbers"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="118dp"
        android:text="Copy"
        android:background="#cccccc"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/button" />

</RelativeLayout>
